{
  "name": "kerthin-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "_moduleAliases": {
    "@application": "dist/application",
    "@domain": "dist/domain",
    "@infrastructure": "dist/infrastructure",
    "@shared": "dist/shared"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "yarn lint"
    ]
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "start-dev": "nodemon",
    "start-prod": "node dist/main.js",
    "lint": "eslint . --ext .ts",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration-create": "yarn typeorm migration:create",
    "migration-generate": "yarn typeorm migration:generate",
    "migration-run": "yarn typeorm migration:run",
    "migration-revert": "yarn typeorm migration:revert",
    "docker-compose": "docker-compose up postgresql kong_migration",
    "kong": "docker-compose up kong",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-coverage": "jest --coverage",
    "test-debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test-e2e": "jest --config ./tests/jest-e2e.json"
  },
  "dependencies": {
    "@kerthin/microservice": "^0.0.2-0",
    "@kerthin/security": "^0.0.1-0",
    "@kerthin/utils": "^0.0.2-0",
    "@nestjs/common": "^7.0.11",
    "@nestjs/core": "^7.0.11",
    "@nestjs/platform-express": "^7.0.11",
    "@nestjs/swagger": "^4.5.12",
    "@nestjs/typeorm": "^7.0.0",
    "@types/morgan": "^1.9.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.14.0",
    "dotenv-safe": "^8.2.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "nest-morgan": "^1.0.1",
    "pg": "^8.2.0",
    "ramda": "^0.27.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.24",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.2",
    "@types/node": "^14.0.1",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.2",
    "nodemon": "^2.0.3",
    "ts-jest": "^25.5.1",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.2"
  }
}
